@import url(https://fonts.googleapis.com/css?family=Roboto:400,900);

color1 = #594F4F
color2 = #3B8686
color3 = #A91209
color4 = #ECF0D3
color5 = #F0F6E7
color6 = #AEF9E9

*, *:before, *:after
  box-sizing: border-box
  margin: 0
  padding: 0

html, body
  height: 100%
  overflow: hidden
  background: color1
  color: color5
  font-family: 'Roboto', sans-serif;
  @media (max-width: 767px)
    &
      font-size: 80%
  @media (max-width: 640px)
    &
      font-size: 70%

.scene
  position: relative
  width: 100%
  height: 100%
  //background-color: color1

.nav-panel
  z-index: 1000
  position: relative
  text-align: center
  ul
    list-style-type: none
    margin: 0
    padding: 15px
    overflow: hidden
    background-color: color1
    .nav-btn
      color: white
      &.active
        color: color6
      &:hover
        color: color5
        background-color: color2
    li
      text-align: center
      display: inline
      padding: 15px
      text-decoration: none

.page
  z-index: 2
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  &:nth-child(1)
    background-image: url("http://www.bretthau.com/img/page1.jpg")
    background-position: center
  &:nth-child(2)
    .left
      background-color: color2
    .right
      background-image: url("http://www.bretthau.com/img/page2.jpg")
      background-position: center
  &:nth-child(3)
    .left
      background-image: url("http://www.bretthau.com/img/page3.jpg")
      background-position: center
    .right
      background-color: color3
  &:nth-child(4)
    .left
      background-color: color4
      color: color1
    .right
      background-image: url("http://www.bretthau.com/img/page4.jpg")
      background-position: center
  &:nth-child(5)
    .left
      background-image: url("http://www.bretthau.com/img/page5.jpg")
      background-position: center
    .right
      background-color: color5
      color: color1
  &.active
    z-index: 5
    transition: transform .7s, opacity .7s, z-index 0s .7s
    .half
      transform: translateX(0) !important
      transition: transform .7s ease-out
  &.previous
    opacity: 0.4 !important
    visibility: visible !important
    transition: transform .7s, opacity .7s, z-index 0s
  &.small
    transform: scale(0.8)
    opacity: 0
    visibility: hidden
    .half
      transform: translateX(0) !important
  for $i in (2)..(10)
    &:nth-child({$i})
      .left
        transform: translateY(-100%)
      .right
        transform: translateY(100%)


.half
  position: absolute
  top: 0
  width: 50%
  height: 100%
  background-size: cover
  transition: transform .7s ease-in
  will-change: transform
  &.left
    left: 0
  &.right
    left: 50%
  &.withText:after
    content: ""
    position: absolute
    display: block
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 10

.heading
  position: relative
  z-index: 500
  top: 40%
  font-size: 3.5rem
  font-weight: 900
  //color: #fff
  text-align: left
  margin-left: 50px

.content
  position: absolute
  z-index: 500
  top: 20%
  padding: 40px
  font-size: 1rem

img
  float: right
  padding: 10px

.social_light
  position: relative
  margin: 23px
  color:  color5
  &:hover
    color: color6

.social_dark
  position: relative
  margin: 23px
  color:  color1
  &:hover
    color: black


button
  position: relative
  height: 45px
  max-width: 200px
  margin: 10px 7px
  padding: 10px 10px
  font-weight: 700
  font-size: 15px
  letter-spacing 2px
  text-transform: uppercase
  outline: 0;
  overflow:hidden
  background: none
  z-index: 1
  cursor: pointer
  transition: ease-in 0.08s

  &.fill_1
    color:  color5
    border: 2px color5 solid
    border-radius: 4px

  &.fill_1:hover
    color: color2

  &.fill_1:before
    content: ''
    position: absolute
    background: color5
    bottom: 0
    left: 0
    right: 0
    top: 100%
    z-index: -1
    transition: top ease-in 0.09s

  &.fill_1:hover:before
    top: 0

  &.fill_2
    color:  color5
    border: 2px color5 solid
    border-radius: 4px

  &.fill_2:hover
    color: color3

  &.fill_2:before
    content: ''
    position: absolute
    background: color5
    bottom: 0
    left: 0
    right: 0
    top: 100%
    z-index: -1
    transition: top ease-in 0.09s

  &.fill_2:hover:before
    top: 0

  &.fill_3
    color:  color1
    border: 2px color1 solid
    border-radius: 4px

  &.fill_3:hover
    color: color4

  &.fill_3:before
    content: ''
    position: absolute
    background: color1
    bottom: 0
    left: 0
    right: 0
    top: 100%
    z-index: -1
    transition: top ease-in 0.09s

  &.fill_3:hover:before
    top: 0

  &.fill_4
    color:  color1
    border: 2px color1 solid
    border-radius: 4px

  &.fill_4:hover
    color: color5

  &.fill_4:before
    content: ''
    position: absolute
    background: color1
    bottom: 0
    left: 0
    right: 0
    top: 100%
    z-index: -1
    transition: top ease-in 0.09s

  &.fill_4:hover:before
    top: 0

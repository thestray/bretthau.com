    bottom: 0
    left: 0
    right: 0
    top: 100%
    z-index: -1
    transition: top ease-in 0.09s

  &.fill_2:hover:before
    top: 0

  &.fill_3
    color:  color1
    border: 2px color1 solid
    border-radius: 4px

  &.fill_3:hover
    color: color4

  &.fill_3:before
    content: ''
    position: absolute
    background: color1
    bottom: 0
    left: 0
    right: 0
    top: 100%
    z-index: -1
    transition: top ease-in 0.09s

  &.fill_3:hover:before
    top: 0

  &.fill_4
    color:  color1
    border: 2px color1 solid
    border-radius: 4px

  &.fill_4:hover
    color: color5

  &.fill_4:before
    content: ''
    position: absolute
    background: color1
    bottom: 0
